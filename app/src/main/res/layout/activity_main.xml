<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="560dp"
    android:background="@drawable/sign_in">

    <ImageView
        android:id="@+id/imageedit_1_8505934178"
        android:src="@drawable/imageedit_1_8505934178"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="19.7dp"
        />

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="PT TAKARI KOKOH SEJAHTERA"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageedit_1_8505934178"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:id="@+id/line1"
        android:orientation="vertical"
        android:layout_below="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
             android:textSize="17dp"
            android:hint="Username"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/line1"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:textSize="17dp"
            android:hint="Password"
            android:inputType="textPassword" />
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/chkRemimberMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:text="Remember Me">
        </androidx.appcompat.widget.AppCompatCheckBox>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_login"
        android:background="@drawable/btn_login"
        android:layout_below="@id/line1"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>